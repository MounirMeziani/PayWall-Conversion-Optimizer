# Application
NODE_ENV=development
PORT=3000
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Database
DATABASE_URL="postgresql://user:password@localhost:5432/paywall_optimizer?schema=public"
# For development, you can use SQLite instead
# DATABASE_URL="file:./dev.db"

# Stripe
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_...

# Authentication (optional)
# AUTH_SECRET=your-secret-key
# NEXTAUTH_URL=http://localhost:3000

# Feature Flags
NEXT_PUBLIC_ENABLE_AI_SUGGESTIONS=true
NEXT_PUBLIC_ENABLE_ANALYTICS=true

# Integration Webhooks (optional)
# SLACK_WEBHOOK_URL=https://hooks.slack.com/services/...
# DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/...

# Email Notifications (optional)
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_USER=user@example.com
# SMTP_PASSWORD=password
# EMAIL_FROM=noreply@yourdomain.com

# Webhooks
SLACK_WEBHOOK_URL="https://hooks.slack.com/services/..."
DISCORD_WEBHOOK_URL="https://discord.com/api/webhooks/..."

# Split testing
NEXT_PUBLIC_DEFAULT_SPLIT_RATIO="50,50"
NEXT_PUBLIC_SPLIT_COOKIE_NAME="paywall_variant"

# API URLs
NEXT_PUBLIC_API_URL="http://localhost:3001" 